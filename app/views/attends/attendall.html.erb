<!DOCTYPE html>
<html>
    <head>
        
    </head>
    <body>
        <div id="wrapper">
            <div class="changebox">
                <div class="inchangebox">
                    <% if @current_user.authority == 1 %>
                        <li><a href="/edit">my情報編集</a></li>
                        <li><a href="/index">社員一覧</a></li>
                        <li><a href="/attend/index">勤怠管理</a></li>
                        <li><a href="/signup">新入社員登録</a></li>
                    <% else %>
                        <li><a href="/edit">編集</a></li>
                        <li><a href="<%= "/index/#{@current_user.id}" %>">職務一覧</a></li>
                    <% end %>                     
                </div>
            </div>
            
            <div id="rightColumn">
                <br>
                <a class="attend-link-newdate" href="/attend/signup/<%= @user.id %>">未記入日登録</a><br>
                <a class="attend-link" href="/attendall/pre1/<%= @user.id %>">前月</a>
                <a class="attend-link nextmonth" href="/attendall/next1/<%= @user.id %>">翌月</a>
                <table border="1px" cellpadding="10px" style="border-collapse: collapse;">
                    <caption><h3><%= @user.name %>(<%= @today.year %>年<%= @today.month %>月)　　</h3></caption>
                    <tr bgcolor="silver">
                        <th>日付</th>
                        <th>始業時刻</th>
                        <th>終業時刻</th>
                        <th>休憩時間</th>
                        <th>実働時間</th>
                        <th>　　備考　　</th>
                    </tr>
                    <% sum = 0 %>
                    <% @days.each do |day| %>
                        <% if @attends.find_by(date:day) %>
                            <% @attend = @attends.find_by(date:day) %>
                            <tr>
                                <% if @attend.remark == "有給(1日)" || @attend.remark == "全休" %>
                                    <% if @attend.date == @today %>
                                        <td bgcolor="mistyrose" style="color:red"><%= show_date(@attend[:date]) %></td>
                                    <% else %>
                                        <td bgcolor="mistyrose"><%= show_date(@attend[:date]) %></td>
                                    <% end %>
                                    <td bgcolor="mistyrose"></td>
                                    <td bgcolor="mistyrose"></td>
                                    <td bgcolor="mistyrose"></td>
                                    <td bgcolor="mistyrose"></td>
                                    <td bgcolor="mistyrose"><%= @attend.remark %></td>
                                <% elsif @attend.remark == "有給(半日)" || @attend.remark == "半休" %>
                                    <% if @attend.date == @today %>
                                        <td style="color:red"><%= show_date(@attend[:date]) %></td>
                                    <% else %>
                                        <td><%= show_date(@attend[:date]) %></td>
                                    <% end %>
                                    <td><% if @attend.start != nil %>
                                            <%= show_time(@attend[:start]) %>
                                        <% end %></td>
                                    <% if @attend.finish == nil %>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    <% else %>
                                        <td><%= show_time(@attend[:finish]) %></td>
                                        <td><%= @attend.rest/3600 %>時間<%= @attend.rest%3600/60 %>分</td>
                                        <td><%= @attend.sum/3600 %>時間<%= @attend.sum%3600/60 %>分</td>
                                        <% sum += @attend.sum %>
                                    <% end %>
                                    <td bgcolor="mistyrose">
                                        <% if @attend.remark != nil %>
                                            <%= @attend.remark %>
                                        <% end %></td>
                                <% else %>
                                    <% if @attend.date == @today %>
                                        <td style="color:red"><%= show_date(@attend[:date]) %></td>
                                    <% else %>
                                        <td><%= show_date(@attend[:date]) %></td>
                                    <% end %>
                                    <td><%= show_time(@attend[:start]) %></td>
                                    <% if @attend.finish == nil %>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    <% else %>
                                        <td><%= show_time(@attend[:finish]) %></td>
                                        <td><%= @attend.rest/3600 %>時間<%= @attend.rest%3600/60 %>分</td>
                                        <td><%= @attend.sum/3600 %>時間<%= @attend.sum%3600/60 %>分</td>
                                        <% sum += @attend.sum %>
                                    <% end %>
                                    <td>
                                        <% if @attend.remark != nil %>
                                            <%= @attend.remark %>
                                        <% end %></td>
                                <% end %>
                                <% if @current_user.authority == 1 %>
                                    <td class="attend-destroy"><a><%= link_to("編集","/attend/edit/#{@attend.id}") %></a></td>
                                <% end %>
                                <td class="attend-destroy"><a><%= link_to("削除","/attend/destroy/#{@attend.id}", {method: :post}) %></a></td>
                            </tr>
                            
                        <% end %>
                    <% end %>
                    <tr>
                        <td colspan="5" align="right">実働時間合計：<%= sum/3600 %>時間<%= sum%3600/60 %>分</td>
                        <td class="attend-destroy"><a><%= link_to("有給表示","/confirm/paidholi/#{@user.id}") %></a></td>
                    </tr>
                </table>
                
                <% #@actualworks.each do |acutualwork| %>
                    <table border="1px" cellpadding="7px" style="border-collapse: collapse;">
                        <caption><h3><%= @user.name %>(<%= @today.year %>年<%= @today.month %>月実働時間)</h3></caption>
                        <tr bgcolor="silver">
                            <th>定時</th>
                            <th>申請時間</th>
                            <th>残業時間</th>
                            <th>フレックス</th>
                            <th>前フレックス</th>
                            <th>残業適応時間</th>
                        </tr>
                        
                        <tr>
                            <td><%= show_time(@acutualwork[:ordistart]) %>~<%= show_time(@acutualwork[:ordifinish]) %></td>
                            <td><%= @acutualwork.attendtime/3600 %>時間<%= @actualwork.attendtime%3600/60 %>分</td>
                            <td><%= @acutualwork.overtime/3600 %>時間<%= @actualwork.overtime%3600/60 %>分</td>
                            <td><%= @acutualwork.flex/3600 %>時間<%= @actualwork.flex%3600/60 %>分</td>
                            <td><%= @acutualwork.flontflex/3600 %>時間<%= @actualwork.flontflex%3600/60 %>分</td>
                            <td><%= @acutualwork.payovertime/3600 %>時間<%= @actualwork.payovertime%3600/60 %>分</td>
                            <td class="attend-destroy"><a>編集</a></td>
                        </tr>
                    </table>
                <% #end %>
            </div>
        </div>
    </body>


